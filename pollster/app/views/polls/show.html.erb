<%- model_class = Poll -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @poll.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:edit_url) %>:</strong></dt>
  <dd><%= @poll.edit_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:public_url) %>:</strong></dt>
  <dd><%= poll_path %></dd>

  <% @poll.questions.each do |question| %>
    <tr>
      <td><%= link_to question.id, question_path(question) %></td>
      <td><%= question.body %></td>
      <td><%= question.poll_id %></td>
      <td><%=l question.created_at %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_question_path(question), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    question_path(question),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>

</dl>


<div class="form-actions">
  <%= link_to t('.add question'),
              new_poll_question_path(@poll),
              :class => 'btn'  %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              polls_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_poll_path(@poll), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              poll_path(@poll),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
